<% if Amp.all.empty? %>
	<h2>Sorry no Guitars listed yet</h2>
<% else %>
	<% @users.each do |user| %>
	<% unless user.amps.empty? %>
			<h2><%=user.username%>'s Amps</h2>
			<% user.amps.each do |amp| %>
					<p><strong><a href="/amps/<%=amp.id%>"><%=amp.make%></a></strong></p>
					<p>Model: <%=amp.model%></p>
					<p>Year: <%=amp.year%></p>
			<% end %>
		<% end %>
	<% end %>
<% end %>